{% extends "adminbase.html.twig" %}

{% block title %}
    Határidő hozzáadása - Webmenza
{% endblock title %}

{% block headtitle %}
    Határidő hozzáadása
{% endblock headtitle %}

{% block content %}
<form method="post" action="#">
    <div class="mb-3 row">
        <label for="from" class="form-label col-sm-2">Első nap:</label>
        <input type="date" name="from" id="from" class="form-control col" required>
    </div>
    <div class="mb-3 row">
        <label for="to" class="form-label col-sm-2">Utolsó nap:</label>
        <input type="date" name="to" id="to" class="form-control col" required>
    </div>
    <div class="mb-3 row">
        <label for="start" class="form-label col-sm-2">Első kitöltési nap:</label>
        <input type="date" name="start" id="start" class="form-control col" required>
    </div>
    <div class="mb-3 row">
        <label for="end" class="form-label col-sm-2">Utolsó kitöltési nap:</label>
        <input type="date" name="end" id="end" class="form-control col" required>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="1" id="notifyusers" name="notifyusers" checked>
        <label class="form-check-label" for="notifyusers">
          Felhasználók értesítése
        </label>
    </div>    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Mentés</button>
</form>
{% endblock content %}