{% extends "adminbase.html.twig" %}

{% block title %}
    Felhasználó szerkesztése - Webmenza
{% endblock title %}

{% block headtitle %}
    Felhasználó szerkesztése - {{ user[0]|escape }}
{% endblock headtitle %}

{% block content %}
<form method="post" action="#">
    <div class="mb-3 row">
        <label for="name" class="form-label col-sm-2">Név:</label>
        <input type="text" name="name" id="name" class="form-control col" required value="{{ user[0]|escape }}">
    </div>
    <div class="mb-3 row">
        <label for="password" class="form-label col-sm-2">Jelszó:</label>
        <input type="password" name="password" id="password" class="form-control col" autocomplete="new-password">
    </div>
    <div class="mb-3 row">
        <label for="password2" class="form-label col-sm-2">Jelszó újra:</label>
        <input type="password" name="password2" id="password2" class="form-control col" autocomplete="new-password">
    </div>
    <div class="mb-3 row">
        <label for="group" class="form-label col-sm-2">Csoport:</label>
        <select name="group" id="group" class="form-select col">
            <option value=""></option>
            {% for group in groups %}
                <option value="{{ group['id'] }}" {% if user[1] == group['id'] %} selected {% endif %}>{{ group['name']|escape }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="1" id="registered" name="registered" {% if user[2] == 1 %}checked{% endif %}>
        <label class="form-check-label" for="registered">
          Aktivált felhasználó
        </label>
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Mentés</button>
</form>
{% endblock content %}