{% extends "adminbase.html.twig" %}

{% block title %}
    Menü importálása - Webmenza
{% endblock title %}

{% block headtitle %}
    Menü importálása
{% endblock headtitle %}

{% block content %}
<form method="post" action="#" enctype="multipart/form-data">
    <div class="mb-3 row">
        <label for="meal" class="form-label col-sm-2">Étkezés:</label>
        <select name="meal" id="meal" class="form-select col" required>
            {% for meal in meals %}
                <option value="{{ meal['id'] }}">{{ meal['name'] }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="mb-3 row">
        <label for="spreadsheet" class="form-label col-sm-2">Fájl:</label>
        <input type="file" name="spreadsheet" id="spreadsheet" class="form-control col" required>
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-download"></i> Importálás</button>
</form>
{% endblock content %}