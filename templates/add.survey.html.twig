{% extends "adminbase.html.twig" %}

{% block title %}
    Kérdőív létrehozása - Webmenza
{% endblock title %}

{% block headtitle %}
    Kérdőív létrehozása
{% endblock headtitle %}

{% block content %}
<form method="post" action="#">
    <div class="mb-3 row">
        <label for="title" class="form-label col-sm-2">Cím:</label>
        <input type="text" name="title" id="title" class="form-control col" required value="{{ post.title }}">
    </div>
    <div class="mb-3 row">
        <label for="description" class="form-label col-sm-2">Leírás:</label>
        <textarea name="description" id="description" class="form-control col" value="{{ post.description }}"></textarea>
    </div>
    <div class="mb-3 row">
        <label for="from" class="form-label col-sm-2">Határidő első napja:</label>
        <input type="date" name="from" id="from" class="form-control col" required>
    </div>
    <div class="mb-3 row">
        <label for="to" class="form-label col-sm-2">Határidő utolsó napja:</label>
        <input type="date" name="to" id="to" class="form-control col" required>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="0" id="notanonim" name="notanonim">
        <label class="form-check-label" for="notanonim">
          Nem anonim kérdőív
        </label>
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Mentés</button>
</form>
{% endblock content %}