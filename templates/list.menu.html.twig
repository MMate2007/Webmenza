{% extends "adminbase.html.twig" %}

{% block title %}
    Menü - Webmenza
{% endblock title %}

{% block headtitle %}
    Menü
{% endblock headtitle %}

{% block content %}
<div class="d-flex justify-content-sm-between flex-wrap">
<div>
    <a href="add.menu.php" class="btn btn-primary" role="button"><i class="bi bi-file-earmark-plus"></i> Menü hozzáadása</a>
    <a href="import.menu.php" class="btn btn-primary" role="button"><i class="bi bi-file-earmark-plus"></i> Menü importálása</a>
</div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Dátum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for key, menu in menus %}
            <tr>
                <td>{{ key|date("Y. m. d.")}}</td>
                <td>
                    <table class="table mb-0">
                        <thead>
                            <th>Étkezés</th>
                            <th>Menü</th>
                            <th>Étel</th>
                            <th></th>
                        </thead>
                        <tbody>
                            {% for meal in menu %}
                                <tr>
                                    <td>{{ meal.name }}</td>
                                    <td>{{ meal.id|menuletter }}</td>
                                    <td>{{ meal.description|nl2br }}</td>
                                    <td>
                                        <a href="edit.menu.php?date={{ key|escape }}&id={{ meal.id|escape }}&mealid={{ meal.mealId|escape }}" class="btn btn-primary" role="button"><i class="bi bi-pencil-square"></i> Szerkesztés</a>
                                        <a href="delete.menu.php?date={{ key|escape }}&id={{ meal.id|escape }}&mealid={{ meal.mealId|escape }}" class="btn btn-danger" role="button"><i class="bi bi-trash3"></i> Törlés</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}