{% extends "base.html.twig" %}

{% block title %}
    Jelszó módosítása - Webmenza
{% endblock title %}

{% block headtitle %}
    Jelszó módosítása
{% endblock headtitle %}

{% block content %}
<form method="post" action="#">
    <div class="mb-3 row">
        <label for="paswordOld" class="form-label col-sm-2">Jelenlegi jelszó:</label>
        <input type="password" class="form-control col" name="passwordOld" id="passwordOld" required autocomplete="current-password">
    </div>
    <div class="mb-3 row">
        <label for="pasword" class="form-label col-sm-2">Új jelszó:</label>
        <input type="password" class="form-control col" name="password" id="password" required autocomplete="new-password">
    </div>
    <div class="mb-3 row">
        <label for="pass2" class="form-label col-sm-2">Új jelszó újra:</label>
        <input type="password" class="form-control col" name="pass2" id="pass2" required autocomplete="new-password">
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Mentés</button>
</form>

{% endblock content %}